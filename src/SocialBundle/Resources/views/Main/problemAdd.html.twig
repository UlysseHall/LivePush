{% extends "SocialBundle::layout.html.twig" %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('ressources/css/social/problemAdd.css') }}">
{% endblock %}

{% block social_right_pan %}

	<div class="col-md-10 col-md-offset-1">

		<h1>Renseigne ton problème</h1>

		<form class="form-horizontal" method="post" action="{{ path('social_problem_add_upload') }}">
			<div class="form-group">
				<label for="title" class="col-xs-3 control-label">Titre</label>
				<div class="col-md-7 col-sm-9">
					<input type="text" maxlength="255" class="form-control" id="title" name="pbAddTitle" placeholder="Titre du problème" required>
				</div>
			</div>

			<div class="form-group">
				<label for="content" class="col-xs-3 control-label">Description</label>
				<div class="col-md-7 col-sm-9">
					<textarea class="form-control" row="10" id="content" name="pbAddContent" placeholder="Description du problème" required></textarea>
				</div>
			</div>

			<div class="form-group">
				<label for="langage" class="col-xs-3 control-label">Technologie problématique</label>
				<div class="col-md-7 col-sm-9">
					<select class="form-control" id="langage" name="pbAddLangage">
				    	<option value="HTML">HTML</option>
				    	<option value="CSS">CSS</option>
				    	<option value="PHP">PHP</option>
				    	<option value="JS">JS</option>
                        <option value="Python">Python</option>
                        <option value="Jquery">Jquery</option>
                        <option value="Bootstrap">Bootstrap</option>
                        <option value="GIT">GIT</option>
						<option value="Autre">Autre</option>
				  	</select>
				</div>
			</div>
			
			<div class="form-group">
				<div class="col-md-9 col-sm-offset-3 col-xs-offset-5">
					<button type="submit" class="btn btn-success">Valider</button>
				</div>
			</div>
		</form>

	</div>

{% endblock %}
