{% extends "::base.html.twig" %}

{% block title %}
	{{ parent() }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('ressources/css/social/layout.css') }}">
	<link rel="stylesheet" href="{{ asset('ressources/css/social/problemDisplay.css') }}">
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('ressources/js/social/containerHeight.js') }}"></script>
	<script src="{{ asset('ressources/js/social/loadList.js') }}"></script>
<!--	<script src="{{ asset('ressources/js/social/langageLogoHeigth.js') }}"></script>-->
{% endblock %}

{% block body %}

<div class="row home-container">

	<section class="home-problems col-xs-3">

        <div class="row">  
		    <a class="problem-add col-xs-12" href="
		    	{% if connected == true %}
		    		{{ path('social_problem_add') }}
		    	{% else %}
		    		{{ path('fos_user_security_login') }}
		    	{% endif %}
		    ">
                J'ai un probl√®me <i class="fa fa-exclamation-triangle"></i>
		    </a>
        </div>

		{% block social_left_pan %}
		    {{ render(controller("SocialBundle:Main:problemsGet", {"list": "unsolved"})) }}
		{% endblock %}

	</section>

	<section class="home-content col-xs-9">
		{% block social_right_pan %}
		    {{ render(controller("SocialBundle:Main:home")) }}
		{% endblock %}
	</section

</div>

{% endblock %}
